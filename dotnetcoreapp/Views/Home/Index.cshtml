@model IEnumerable<Employee>
    @{
    ViewBag.Title="Index method";

    }
<div class="card-deck">
    @foreach (var employee in Model)
    {
        var photoPath = "~/images/" + (employee.PhotoPath ?? "noimage2.jpg");
        <div class="card m-3" style="min-width:18rem; max-width:30.5%;">
            <div class="card-header">
                <h3>@employee.Name</h3>
            </div>
            <img class="card-img-top" src="@photoPath" 
                 asp-append-version="true"   
                 />
            <div class="card-footer text-center">
                <a asp-controller="home" asp-action="details" asp-route-id="@employee.Id" class="btn btn-primary m-1">View</a>
                <!--<a href="Url.Action("details", "home", new { id = employee.Id })"-->
                <!-- class="btn btn-primary">show</a>-->
                <!--Html.ActionLink("View", "details", "home", new { id = employee.Id })--->
                <!--- <a href="/home/details/employee.Id" class="btn btn-primary">View</a>-->
                <a asp-action="edit" asp-controller="Home" asp-route-id="@employee.Id" class="btn btn-primary">Edit</a>
                <a  class="btn btn-danger">Delete</a>
            </div>
        </div>
    }
</div>